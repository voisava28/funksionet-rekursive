#include <stdio.h>

int faktorial(int n) {
    if (n == 0 || n == 1)
        return 1;
    else
        return n * faktorial(n-1);
}

int shuma_faktorial(int n) {
    if (n == 0)
        return 0;

    else
        return faktorial(n) + shuma_faktorial(n-1);
}

int main() {
    int n;
    printf("Jepni nje numer: ");
    scanf("%d", &n);

    int shuma = shuma_faktorial(n);
    printf("Shuma e faktorialeve deri ne %d eshte: %d\n", n, shuma);
    return 0;
}
